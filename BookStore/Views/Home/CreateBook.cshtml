@{
}
<div>
<form asp-action="CreateBook" method="post">
            <div class="row">
				<div class="col-6 mb-3">
				<div class="col-6 mb-3">
				<label class="form-label">Author</label>
				<select name="AuthorId" class="form-select">
					@if(Model.Authors != null){
						@foreach (var author in Model.Authors)
						{
							<option value="@author.Id">@author.Name</option>
						}
					}
				</select>            
			</div>
			<div class="col-6 mb-3">
				<label class="form-label">Title</label>
				<input asp-for="Title" class="form-control" />
			</div>
			<div class="col-6 mb-3">
				<label class="form-label">Price</label>
				<input asp-for="Price" class="form-control">
			</div>
			
               <div class="col-12 d-flex mt-2 justify-content-sm-center">
				<button type="submit" class="btn btn-primary rounded-pill pl-5"> Submit </button>
            </div>
			</div>
        </form>
</div>
